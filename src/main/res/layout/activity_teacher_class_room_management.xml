<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".Activity.Teacher_ClassRoom_Management_Activity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LoginButtonColor"
        android:gravity="center"
        android:text="班级管理"
        android:textColor="@color/LoginButtonTextColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/class_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <TextView
            android:id="@+id/class_room_manage_class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Class_info_color"
            android:gravity="center"
            android:text="课程名称"
            android:textColor="@color/LoginButtonTextColor"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/class_room_manage_class_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Class_info_color"
            android:gravity="center"
            android:text="课程编号"
            android:textColor="@color/LoginButtonTextColor"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/class_room_manage_class_student_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Class_info_color"
            android:gravity="center"
            android:text="学生人数"
            android:textColor="@color/LoginButtonTextColor"
            android:textSize="20sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_info"
        app:layout_constraintVertical_bias="0.377">

        <Button
            android:id="@+id/class_room_manage_view_student_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/LoginButtonColor"
            android:text="查看当前班级的学生"
            android:textColor="@color/LoginButtonTextColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/class_room_manage_add_student_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/LoginButtonColor"
            android:text="添加学生"
            android:textColor="@color/LoginButtonTextColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/class_room_manage_publish_checkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/LoginButtonColor"
            android:text="发布签到"
            android:textColor="@color/LoginButtonTextColor"
            android:textSize="20sp" />
        <Button
            android:id="@+id/class_room_manage_managecheckins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/LoginButtonColor"
            android:text="管理签到"
            android:textColor="@color/LoginButtonTextColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/class_room_manage_create_homework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/LoginButtonColor"
            android:text="布置作业"
            android:textColor="@color/LoginButtonTextColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/class_room_manage_homework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/LoginButtonColor"
            android:text="作业管理"
            android:textColor="@color/LoginButtonTextColor"
            android:textSize="20sp" />



        <Button
            android:id="@+id/class_room_manage_random_pickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/LoginButtonColor"
            android:text="随机点名"
            android:textColor="@color/LoginButtonTextColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/class_room_manage_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/LoginButtonColor"
            android:text="返回"
            android:textColor="@color/LoginButtonTextColor"
            android:textSize="20sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>