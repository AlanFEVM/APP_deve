<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Student_Activity">

    <FrameLayout
        android:id="@+id/S_dashBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dashBoardColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/s_d_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/s_d_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/s_d_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="年龄"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/s_d_student_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="学生编号"
                android:textSize="25sp" />

        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

</androidx.constraintlayout.widget.ConstraintLayout>